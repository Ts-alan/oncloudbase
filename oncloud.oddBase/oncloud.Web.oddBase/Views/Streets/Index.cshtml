@model IEnumerable<oncloud.Domain.Entities.Street>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Caption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartPointLongitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartPointLatitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndPointLongitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndPointLatitude)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Caption, "Details", new { id = item.StreetId })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartPointLongitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartPointLatitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndPointLongitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndPointLatitude)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.StreetId })
        </td>
    </tr>
}

</table>
