
@model  IEnumerable<oncloud.Domain.Entities.RoadSigns>

<table class="table table-bordered">
    <tr>
        <th>№ знака</th>
        <th>Картинка</th>
        <th>Описание</th>
        <th>Дополнительные параметры</th>
        <th>Количество</th>
    </tr>
    @foreach (var item in (IEnumerable<oncloud.Domain.Entities.RoadSigns>)ViewBag.RoadSigns)
    {
        if (item.NumberRoadSigns.Substring(0, 1) == (string)Session["increment"])
        {
            <tr>
                <td>@item.NumberRoadSigns</td>
                <td>
                    @if (item.ImageData != null && item.IndifikatorMultipleImage == false)
                    {
                        <img style="height: 100px; width: 100px" src="@Url.Action("GetImage", "RoadSigns", new {item.id})" />
                    }
                </td>
                <td>@item.Description</td>
                <td>
                    @if (item.IndifikatorMultipleImage)
                    {
                        foreach (var item2 in item.MultipleImageForRoadSigns)
                        {
                    <tr>
                        <td><img style="height: 100px; width: 100px" src="@Url.Action("GetImageForRS", "Home", new {item2.Id})" />
                            
                        </td>
                    </tr>
                        }
                    }
                    </td>
                    <td style="vertical-align: middle"><input name="ModalC@(item.NumberRoadSigns)" type="text" /></td>

                    </tr>
        }
    }
</table>